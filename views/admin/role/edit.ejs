                  <input type="hidden" name="_id" value="<%=roleList._id%>" />
                  <li> 角色名称: <input type="text" name="title" value="<%= roleList.title%>" /></li>
                  <li>
                    角色描述:
                    <textarea name="description" id="" cols="60" rows="8"><%= roleList.description%></textarea>
                  </li>

                  <li>
                    <br />
                    <button type="submit" class="btn btn-primary">提交</button>
                  </li>

                </ul>


              </form>
            </div>
          </div>


        </div>

      </div>
    </div>
  </div>

